{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_stfu_name": {
            "defaultValue": "stfu",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-04-01",
            "name": "stfu",
            "location": "northeurope",
            "properties": {
                "containers": [
                    {
                        "name": "stfu",
                        "properties": {
                            "image": "eirikb.azurecr.io/stfu",
                            "ports": [],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            },
                            "volumeMounts": [
                                {
                                    "name": "certs",
                                    "mountPath": "/root/.caddy"
                                },
                                {
                                    "name": "home",
                                    "mountPath": "/srv"
                                }
                            ]
                        }
                    }
                ],
                "imageRegistryCredentials": [
                    {
                        "password": "",
                        "server": "eirikb.azurecr.io",
                        "username": "eirikb"
                    }
                ],
                "restartPolicy": "Always",
                "osType": "Linux",
                "volumes": [
                    {
                        "name": "certs",
                        "azureFile": {
                            "shareName": "certs",
                            "storageAccountName": "eirikbstfu",
                            "storageAccountKey": ""
                        }
                    },
                    {
                        "name": "home",
                        "azureFile": {
                            "shareName": "home",
                            "storageAccountName": "eirikbstfu",
                            "storageAccountKey": ""
                        }
                    }
                ]
            }
        }
    ]
}
